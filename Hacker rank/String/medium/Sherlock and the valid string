#include <iostream>
#include <algorithm>
#include <string>
#include <vector>

int main()
{
	std::string str;
	std::cin >> str;
	str += "{"; // for a last alphabet
	std::sort(str.begin(), str.end());

	std::vector<int> counts;
	int count(1);
	for (int i = 0; i < str.length() - 1; ++i)
	{
		if (str[i] == str[i + 1])
		{
			count++;
		}
		else
		{
			counts.push_back(count);
			count = 1;
		}
	}



	counts.push_back(999); 
